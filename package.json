{
  "name": "marp-template",
  "version": "1.0.0",
  "description": "Marp custom theme template for Go Saito",
  "scripts": {
    "serve": "marp -s ./ --theme ./theme.css",
    "build:html": "mkdir -p dist && marp sample.md --allow-local-files --html --theme ./theme.css -o dist/sample.html",
    "build:pdf": "mkdir -p dist && marp sample.md --allow-local-files --pdf --theme ./theme.css -o dist/sample.pdf",
    "build:pptx": "mkdir -p dist && marp sample.md --allow-local-files --pptx --theme ./theme.css -o dist/sample.pptx",
    "build:all": "npm run build:html && npm run build:pdf && npm run build:pptx"
  },
  "author": "Go Saito",
  "license": "MIT",
  "devDependencies": {
    "@marp-team/marp-cli": "^4.2.3"
  }
}
